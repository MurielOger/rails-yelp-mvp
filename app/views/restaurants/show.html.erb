<div class="container m-3">
  <div class="row">
    <div class="col-sm-12">
    <h2>Name : <%= @restaurant.name %></h2>
    <p>Address : <%= @restaurant.address %></p>
    <p>Category : <%= @restaurant.category %></p>
    <p>Phone number :<%= @restaurant.phone_number %></p>
    <p>Stars : <%= @restaurant.stars %></p>
    <p>Reviews : </p>
    <ul><% @restaurant.reviews.each do |review| %>
    <li><%=  review.content %></li>
    <% end %></ul>
  </div>
  <div class="col-sm-12">
<%= link_to 'edit', edit_restaurant_path(@restaurant)  %><br>
<%= link_to 'add a review', new_restaurant_review_path(@restaurant) %><br>
<%= link_to 'come back to the list', restaurants_path %><br>
<%= link_to 'delete this restaurant', restaurant_path(@restaurant), method: :delete%>
    </div>
  </div>
</div>

